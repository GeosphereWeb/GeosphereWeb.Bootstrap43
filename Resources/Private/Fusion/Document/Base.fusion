/**
 * Prototyoe to render a page with all scripts and styles but with
 * a replacable body and bodyClass via props
 */
prototype(GeosphereWeb.Bootstrap43:Document.Base) < prototype(Neos.Fusion:Component) {
    body = null
    bodyClass = null

    renderer = Neos.Neos:Page {
        head {
            stylesheets {
                site = GeosphereWeb.Bootstrap43:Document.Fragment.StyleSheets
            }
            metadata = GeosphereWeb.Bootstrap43:Document.Fragment.MetaData
        }

        bodyTag.attributes.class = ${props.bodyClass}
        body = ${props.body}

        bodyScripts = GeosphereWeb.Bootstrap43:Document.Fragment.JavaScripts
        bodyScripts.@position = 'after body'
    }
}
